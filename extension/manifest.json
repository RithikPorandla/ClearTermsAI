{
  "manifest_version": 3,
  "name": "ClearTerms AI",
  "version": "1.0.0",
  "description": "Real-time legal risk translator for ToS and Privacy Policies.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>", "https://generativelanguage.googleapis.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "ClearTerms AI"
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
